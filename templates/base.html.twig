<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Fashion">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %} Fashion {% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{asset('assets/css/bootstrap.min.css')}}" rel="stylesheet">
    <link rel="stylesheet" href="{{asset('assets/css/nav.css')}}">
    <link rel="stylesheet" href="{{asset('assets/css/navBar.css')}}">
    <link rel="stylesheet" href="{{asset('assets/css/cart.css')}}">


    <!-- Custom styles for this template -->
    <link href="{{asset('assets/css/carousel.css')}}" rel="stylesheet">
</head>
<body>

<header>
    {% block navBar %} {% endblock %}
</header> 
        
<main role="main" id="main">
    <!--CAROUSEL-->
    {% if block('carousel') is defined %}
    <section id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key,header in headers %}
                <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %}></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner">
            {% for key,header in headers %}
                <div class="carousel-item {% if key == 0 %} active {% endif %}" style="background: url('/uploads/{{header.illustration}}');background-size:cover;background-position:center;">
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1 id="carousel-title">{{ header.title }}</h1>
                            <p id="carousel-content">{{ header.content }}</p>
                            <p><a href="{{ header.btnUrl }}"><button class="button-design">{{ header.btnTitle }}</button></a></p>

                        </div>
                    </div>
                </div>
            {% endfor %} 
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </section>
    {% endif %}

    <!-- Wrap the rest of the page in another container to center all the content. -->
    <section class="home-main {% if block('carousel') is not defined %}mt-4{% endif %}">
    {% block content %}{% endblock %}
    </section>

    <!-- FOOTER -->
    <footer class="container-fluid">
        <hr>
        <section class="icons-banner-section"> 
            <div class="icons-banner">
                <div class="label">
                    <img src="{{ asset('assets/pictures/expedition.png') }}" alt="expedition">
                    <p class=""> <strong>Quick expedition</strong></p>
                </div>
                <div class="label">
                    <img src="{{ asset('assets/pictures/service-clients.png') }}" alt="expedition">
                    <p class=""><strong>Customer service available</strong></p>
                </div>
                <div class="label">
                    <img src="{{ asset('assets/pictures/paiement.png') }}" alt="expedition">
                    <p class=""><strong>Secure payment</strong></p>
                </div>
            </div>
        </section>

        <div class="color">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6 px-4">
                                <div class="logo-part">
                                    <a href="{{ path('home') }}"><img src="{{ asset('assets/pictures/2.png') }}" class="w-75 logo-footer" alt="Fashion"></a>
                                    <p class="p-under-logo-footer">Fashion</p>
                                    <p>Fashion Fashion Fashion</p>
                                </div>
                            </div>
                            <div class="responsives-col col-md-6 px-4">
                                <p class="footer-p-underline"> About the company</p>
                                <a href="#" class="btn-footer"> More Info </a><br>
                                <a href="#" class="btn-footer"> Contact Us</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="responsives-col col-md-6 px-4">
                                <p class="footer-p-underline"> Customer service </p>
                                <div class="row">
                                    <div class="col-12">
                                        <ul>
                                            <li> <a href="#"> Legal Notice</a> </li>
                                            <li> <a href="#">Help & FAQs</a> </li>
                                            <li> <a href="#"> Returns & exchanges</a> </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="responsives-col col-md-6 ">
                                <p class="footer-p-underline"> Follow us</p class="footer-underline">
                                <div class="social">
                                    <a href="{{ path('home') }}"><img src="{{ asset('assets/pictures/logo-facebook.png') }}" class="w-14 logo-footer" alt="logo-fashion"></a>
                                    <a href="{{ path('home') }}"><img src="{{ asset('assets/pictures/logo-instagram.png') }}" class="w-14 logo-footer" alt="logo-fashion"></a>
                                </div>
                                <p>&copy; 2022 Fashion</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
<script src="{{ asset('assets/js/accordion-home.js') }}"></script>
<script src="{{ asset('assets/js/fullscreen-picture.js') }}"></script>
<script src="{{ asset('assets/js/slider.js') }}"></script>
