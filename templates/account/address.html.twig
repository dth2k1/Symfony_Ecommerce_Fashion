{% extends 'home/navBar.html.twig' %}

{% block title %}Fashion-address{% endblock %}

{% block content %}
	<h1>My adresses</h1>
	<p>you can modify your addresses in this space</p>
	<a href="{{ path('account') }}">Back to my account</a>
	<hr>
	{% if app.user.addresses|length == 0%}
		<p class="text-center mt-5">
            You have not yet added any addresses in your customer account,
            to add address <a href="{{ path('account_address_add')}}">click here.</a>
		</p>
    {% else %}
        <div class="row">
            {% for address in app.user.addresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <p class="card-text">
                                {{ address.address }},<br>
                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <a href="{{ path('account_address_edit', { 'id' : address.id }) }}">edit</a> |
                            <a href="{{ path('account_address_delete', { 'id' : address.id }) }}">delete</a>

                        </div> 
                    </div>
                </div>
            {% endfor %}
        </div>
	{% endif %}
    <a href="{{ path('account_address_add') }}" class="button-design mt-5">add your address</a>


{% endblock %}

